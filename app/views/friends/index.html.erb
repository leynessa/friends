<h1>Your Phone Book</h1>

<table class="table table-hover table-bordered">
  <thead class="table-info">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Number</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.user_id %></td>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.number %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="d-grid gap-2 col-6 mx-auto">
<%= link_to 'New Friend', new_friend_path, class:"btn btn-info"  %>
</div>
