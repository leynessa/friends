<div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold"> <%= @friend.first_name %> <%= @friend.last_name %> </h1>
            <p class="col-md-8 fs-4">
            <p>Email address: <%= @friend.email %></p>

            <p>Phone #: <%= @friend.number %></p>

            <p>Twitter: <%= @friend.twitter %></p>
            </p>
            <br/>
          <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-info"  %> |
          <%= link_to 'Back', friends_path, class:"btn btn-info"  %>
        </div>
    </div>
